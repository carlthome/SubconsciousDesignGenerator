<Window x:Class="SubconsciousDesignGenerator.Composite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Composite"
        StateChanged="onMaximized"
        VerticalContentAlignment="Stretch"
        HorizontalContentAlignment="Center">
    <Viewbox>
        <Grid Name="CompositeImage" Width="3307" Height="4677" Background="White">
            <Border BorderBrush="Black">
                <Canvas Name="Layout"/>
            </Border>
            <Border VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderBrush="Black">
                <StackPanel Background="Black" Opacity="0.25">
                    <TextBlock Text="Ögonmätningsdata" Style="{StaticResource SmallText}"/>
                    <TextBlock Text="{Binding EuclideanNorm}" Style="{StaticResource SmallText}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
