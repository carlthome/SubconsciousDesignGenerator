<Window x:Class="SubconsciousDesignGenerator.Slideshow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slideshow" WindowStyle="None" WindowState="Maximized" Topmost="True" Loaded="onLoaded" KeyDown="onKeyDown" Cursor="None">
    <Grid>
        <Grid Name="Slide" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image Name="Image1" Height="Auto" Width="Auto" Grid.Column="0"/>
            <Image Name="Image2" Height="Auto" Width="Auto" Grid.Column="1"/>
        </Grid>
        <TextBlock Name="Instructions" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="72" FontFamily="Times New Roman"/>
    </Grid>
</Window>
